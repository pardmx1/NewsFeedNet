@model ApiArticles

<div id="parialFeed" class="text-center">
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 justify-content-center">
            @foreach (var article in Model.articles)
            {
                <div class="col mb-4">
                    <div class="card h-100 text-center" style="width: 18rem;">
                        <img src=@article.urlToImage class="card-img-top" alt="..." href="@article.url">
                        <div class="card-body">
                            <h5 class="card-title">@article.title</h5>
                            <p class="card-text">@article.description</p>
                            <p class="card-text"><small class="text-muted">Published at @article.publishedAt</small></p>
                            <a name="articleUrl" href="@article.url" class="btn btn-primary">View More >>></a>
                            <div class="card-footer">
                                <small class="text-muted">From: @article.source.name</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        @{
            var pages = (Model.totalResults % 20) == 0 ? (Model.totalResults /20): (Model.totalResults / 20) + 1;
        }
        @Html.Hidden("pages", pages)
        <div class="row justify-content-center">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link">Previous</a>
                    </li>
                    @for (var i = 1; i <= pages; i++)
                    {
                        <li class="page-item"><a class="page-link" href="#" onclick="javascript:ChangePage(@i)">@i</a></li>
                    }
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>